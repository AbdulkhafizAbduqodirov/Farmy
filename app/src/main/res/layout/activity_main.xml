<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@drawable/card_viewe"
        android:elevation="3dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_viewe">

            <Button
                android:id="@+id/mCameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:background="@drawable/custom_button"
                android:padding="13dp"
                android:text="Camera"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/mDetectButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mDetectButton" />

            <Button
                android:id="@+id/mGalleryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:background="@drawable/custom_button"
                android:padding="13dp"
                android:text="Gallery"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/mResultTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mPhotoImageView" />

            <ImageView
                android:id="@+id/mPhotoImageView"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="78dp"
                android:background="@drawable/img_v"
                android:contentDescription="View Display Image"
                android:scaleType="fitXY"
                android:src="@drawable/automn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/mDetectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/custom_button"
                android:padding="13dp"
                android:text="Detect"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/mGalleryButton"
                app:layout_constraintEnd_toStartOf="@+id/mCameraButton"
                app:layout_constraintStart_toEndOf="@+id/mGalleryButton"
                app:layout_constraintTop_toTopOf="@+id/mGalleryButton" />

            <TextView
                android:id="@+id/mResultTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:shadowColor="@color/black"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mPhotoImageView" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <me.ibrahimsn.lib.SmoothBottomBar
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:paddingTop="2dp"
            app:iconSize="25dp"
            app:textSize="16sp"
            android:layout_gravity="bottom"
            android:elevation="16dp"
            android:padding="8dp"
            android:background="@color/teal_700"
            app:menu="@menu/newmenu"/>


    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>